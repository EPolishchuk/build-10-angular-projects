<!DOCTYPE html>
<html>
<head>    	
	<!--STYLES-->
	<link rel="stylesheet" href="/styles/angular-toastr.min.css">
	<link rel="stylesheet" href="/styles/app.css">
	<link rel="stylesheet" href="/styles/foundation.css">
	<link rel="stylesheet" href="/styles/importer.css">
	<!--STYLES END-->
</head>
<body ng-app="SignupMod" ng-controller="SignupCtrl">
<div class="large-4 large-centered columns">
  <div class="signup-box">
    <div class="row">
      <div class="large-12 columns">
        <h2 class="text-center">UserAuth</h2>
        <p>Please fill in the fields below to signup</p>
        <form ng-submit="runSignup()">
           <div class="row">
             <div class="large-12 columns">
                 <input ng-model="name" ng-maxlength="40" type="text" name="name" placeholder="Name" required>
             </div>
           </div>
            <div class="row">
             <div class="large-12 columns">
                 <input ng-model="email" type="email" placeholder="Email Address" name="email" required>
             </div>
           </div>
          <div class="row">
             <div class="large-12 columns">
                 <input ng-model="password" ng-maxlength="20" type="password" name="password" placeholder="Password" required>
             </div>
          </div>
           <div class="row">
             <div class="large-12 columns">
                 <input ng-model="password2" ng-maxlength="20" type="password" name="password2" placeholder="Password Confirm" required>
             </div>
          </div>
          <div class="row">
            <div class="large-7 columns">
              <input type="submit" class="button expand" value="Create Account">
            </div>
            <div class="large-5 columns">
             <a class="button expand">Log In</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!--SCRIPTS-->
<script src="/js/dependencies/sails.io.js"></script>
<script src="/js/dependencies/jquery-1.12.2.min.js"></script>
<script src="/js/dependencies/angular.min.js"></script>
<script src="/js/dependencies/angular-toastr.min.js"></script>
<script src="/js/dependencies/angular-toastr.tpls.min.js"></script>
<script src="/js/dependencies/foundation.min.js"></script>
<script src="/js/public/signup/SignupMod.js"></script>
<script src="/js/public/signup/SignupCtrl.js"></script>
<script src="/js/public/login/LoginMod.js"></script>
<script src="/js/public/login/LoginCtrl.js"></script>
<script src="/js/private/dashboard/DashMod.js"></script>
<script src="/js/private/dashboard/DashCtrl.js"></script>
<!--SCRIPTS END-->
</body>
</html>